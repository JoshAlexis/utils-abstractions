{
  "compilerOptions": {
		"module": "CommonJS",
		"target": "ES6",
		"lib": ["ES6", "ES7", "ESNext"],
		"declaration": true,
		"outDir": "./dist",
		"moduleResolution": "node",
		"strict": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true
	},
  "include": ["src/**/*", "tests"],
  "exclude": ["node_modules"]
}
