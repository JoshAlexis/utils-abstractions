{
    "compilerOptions": {
      "module": "ES6",
      "target": "ES6",
      "lib": ["ES2022", "DOM"],
      "declaration": true,
      "outDir": "./dist/esm",
      "moduleResolution": "node",
      "strict": true,
      "allowSyntheticDefaultImports": true,
      "forceConsistentCasingInFileNames": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}